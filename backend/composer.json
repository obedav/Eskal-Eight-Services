{
    "name": "eskaleight/services-backend",
    "description": "ESKAL EIGHT SERVICES Backend API",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^6.10",
        "phpmailer/phpmailer": "^6.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "config/database.php",
            "config/cors.php",
            "config/constants.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
